---
layout: null
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  {%- for page in site.pages -%}
    {%- assign u = page.url | default: "" -%}
    {%- if u != "" and u != "/404.html" and u != "/robots.txt" and u != "/sitemap.xml" -%}
      {%- unless u contains "/assets/" -%}
      <url>
        <loc>{{ u | absolute_url }}</loc>
      </url>
      {%- endunless -%}
    {%- endif -%}
  {%- endfor -%}

  {%- for collection in site.collections -%}
    {%- if collection.output -%}
      {%- for doc in collection.docs -%}
        {%- unless doc.sitemap == false -%}
        <url>
          <loc>{{ doc.url | absolute_url }}</loc>
          {%- if doc.date -%}<lastmod>{{ doc.date | date_to_xmlschema }}</lastmod>{%- endif -%}
        </url>
        {%- endunless -%}
      {%- endfor -%}
    {%- endif -%}
  {%- endfor -%}

</urlset>
